pkgname=tux-bootstrap
pkgver=1.0
pkgurls=(https://github.com/themakerofstuff/tux/releases/latest/download/tux-$pkgver.tar.xz
depends=(rsync-bootstrap)

buildpkg() {
	mkdir tux
	cd tux
	tar xf ../tux-$pkgver.tar.xz
}

installpkg() {
	cd tux
 mkdir -p $DST/usr/bin
	make prefix=/usr root=$DST install
}
