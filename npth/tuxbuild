pkgname=npth
pkgver=1.7
pkgurls=(https://www.gnupg.org/ftp/gcrypt/npth/npth-$pkgver.tar.bz2)
depends=()

buildpkg() {
    tar xf $pkgname-$pkgver.tar.bz2
    cd $pkgname-$pkgver
    ./configure --prefix=/usr
    make || make -j1
}

installpkg() {
    cd $pkgname-$pkgver
    make DESTDIR=$DST install
}